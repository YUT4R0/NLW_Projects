generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  githubId  Int    @unique
  name      String
  login     String
  avatarURL String
  posts     Post[]
}

model Post {
  id     String @id @default(uuid())
  userId String

  coverUrl  String
  content   String
  createdAt DateTime @default(now())
  isPublic  Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
}
